<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/position_nmb"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/obj_mrgn_top"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/team_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_teamName"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="335dp"
        android:textSize="@dimen/team_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_teamName"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="259dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_gdiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_teamName"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="297dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_bckgrnd" />


</RelativeLayout>
