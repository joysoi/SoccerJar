<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_bckgrnd" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/separatorView"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="Home Team"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_home"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Away Team"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_homeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/separatorView"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/text_awayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_homeScore"
        android:layout_alignStart="@+id/text_homeScore"
        android:layout_below="@+id/txt_home"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text=""/>

</RelativeLayout>



